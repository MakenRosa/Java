<VBox maxHeight="700.0" maxWidth="500.0" minHeight="700.0" minWidth="500.0" stylesheets="@styleCadastroCliente.css" prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxteste.FXMLCadastroClienteController"  styleClass="background">
    
    <Label text="Cadastro de Cliente" styleClass="titulo">
