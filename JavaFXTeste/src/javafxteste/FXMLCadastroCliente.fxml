            <Font name="System Bold" size="30.0" />
        </font>
        <padding>
            <Insets top="40" bottom="30"  left="85"/>
        </padding>
    </Label>

    <GridPane vgap="20">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="nomeTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="telefoneTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="CEP:" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="cepTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Rua:" GridPane.columnIndex="0" GridPane.rowIndex="4">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="ruaTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Bairro:" GridPane.columnIndex="0" GridPane.rowIndex="5">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="bairroTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Cidade:" GridPane.columnIndex="0" GridPane.rowIndex="6">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="cidadeTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="7">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="estadoTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <Label text="Número:" GridPane.columnIndex="0" GridPane.rowIndex="8">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="numeroTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        <Label text="Complemento:" GridPane.columnIndex="0" GridPane.rowIndex="9">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="complementoTextField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

        <Label text="Observação:" GridPane.columnIndex="0" GridPane.rowIndex="10">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        </Label>
        <TextField fx:id="observacaoTextField" GridPane.columnIndex="1" GridPane.rowIndex="10" />
    </GridPane>

    <VBox alignment="CENTER">
        <padding>
            <Insets top="20" />
        </padding>
        
        <Button text="Salvar">
        <font>
            <Font name="System Bold" size="15.0" />
        </font>
        </Button>
    </VBox>
    
</VBox>

