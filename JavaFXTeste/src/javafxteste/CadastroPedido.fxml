<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="613.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxteste.CadastroPedidoController">
    <children>
        <Label layoutX="197.0" layoutY="52.0" text="Cadastro de Pedido">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label layoutX="55.0" layoutY="110.0" text="Nome do Cliente:" />
        <TextField fx:id="nomeClienteField" layoutX="55.0" layoutY="135.0" prefWidth="350.0" />
        <Label layoutX="55.0" layoutY="180.0" text="Telefone do Cliente (com DDD):" />
        <TextField fx:id="telefoneClienteField" layoutX="55.0" layoutY="205.0" prefWidth="350.0" />
        <Label layoutX="55.0" layoutY="250.0" text="* Valor do Pedido (R$):" />
        <TextField fx:id="valorPedidoField" layoutX="55.0" layoutY="275.0" prefWidth="350.0" />
        <Label layoutX="55.0" layoutY="320.0" text="* Data do Pedido:" />
        <TextField fx:id="dataPedidoField" layoutX="55.0" layoutY="345.0" prefWidth="350.0" promptText="dd/mm/aaaa" />
        <Label layoutX="55.0" layoutY="390.0" text="Forma de Pagamento:" />
        <Label layoutX="55.0" layoutY="460.0" text="Valor Total do Pedido (R$):" />
        <TextField fx:id="valorTotalPedidoField" layoutX="55.0" layoutY="485.0" prefWidth="350.0" />
        <RadioButton fx:id="radioDinheiro" layoutX="55.0" layoutY="422.0" mnemonicParsing="false" text="Dinheiro">
            <toggleGroup>
                <ToggleGroup fx:id="formaPagamento" />
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="radioPix" layoutX="131.0" layoutY="422.0" mnemonicParsing="false" text="Pix"
            toggleGroup="$formaPagamento" />
        <RadioButton fx:id="radioCredito" layoutX="176.0" layoutY="422.0" mnemonicParsing="false" text="Crédito"
            toggleGroup="$formaPagamento">
            <tooltip>
                <Tooltip
                    text="Aceitamos cartões de crédito das bandeiras Visa, Mastercard e American Express" />
            </tooltip>
        </RadioButton>

        <RadioButton fx:id="radioDebito" layoutX="247.0" layoutY="422.0" mnemonicParsing="false" text="Débito"
            toggleGroup="$formaPagamento">
            <tooltip>
                <Tooltip
                    text="Aceitamos cartões de débito das bandeiras Visa Electron, Maestro e Elo" />
            </tooltip>
        </RadioButton>
        <Button fx:id="cadastrarButton" layoutX="253.0" layoutY="550.0" mnemonicParsing="false"
            text="Cadastrar Pedido" onAction="#cadastrarPedido" />
    </children>
</AnchorPane>